{% macro generate_section(name, img, titleMain, titleSub, descLeft, descRight) %}
<section class="{{name}} position-relative" id="{{name}}">
  <div class="container position-relative font-open-sans">
    <div class="section-wrapper d-flex font-neucha justify-between">
      <div class="{{name}}-title-container">
        <div class="{{name}}-title-wrapper">
          <p class="{{name}}-subtitle">Когнитивные искажения</p>
          <h2 class="{{name}}-title {{name}}-title-colored">{{titleMain}}</h2>
          <p class="{{name}}-desc {{name}}-desc-colored">
            {{titleSub}}
          </p>
        </div>
      </div>
      <img src="{{img}}" alt="main" class="{{name}}-img" />
    </div>
    <div class="{{name}}-symptoms {{name}}-symptoms-background font-open-sans-bold">
      Как проявляется
    </div>
    <div class="{{name}}-description-wrapper d-flex">
      <p class="{{name}}-description font-open-sans">
        {{descLeft}}
      </p>
      <p class="{{name}}-description font-open-sans">
        {{descRight | safe}}
      </p>
    </div>
  </div>
</section>
{% endmacro %}
